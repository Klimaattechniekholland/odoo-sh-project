<odoo>
    <!-- Hoofdmenu onder CRM -->
    <record id="crm_menu_klimaat_config" model="ir.ui.menu">
        <field name="name">Klimaatinstellingen</field>
        <field name="parent_id" ref="crm.crm_menu_root"/>
        <field name="sequence" eval="90"/>
    </record>

    <!-- Actie voor pipeline genereren -->
    <record id="action_generate_klimaat_pipeline" model="ir.actions.server">
        <field name="name">Genereer Klimaat Pipeline</field>
        <field name="model_id" ref="crm.model_crm_stage"/>
        <field name="state">code</field>
        <field name="code">model.create_klimaat_pipeline()</field>
    </record>

    <!-- Submenu met actie onder Klimaatinstellingen -->
    <record id="crm_menu_generate_pipeline" model="ir.ui.menu">
        <field name="name">Genereer Klimaat Pipeline</field>
        <field name="parent_id" ref="crm_menu_klimaat_config"/>
        <field name="action_id" ref="action_generate_klimaat_pipeline"/>
        <field name="sequence" eval="100"/>
    </record>
</odoo>

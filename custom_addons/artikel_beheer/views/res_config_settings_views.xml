<odoo>
    <record id="res_config_settings_view_sales5" model="ir.ui.view">
        <field name="name">res.config.settings.view.sales5</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='settings_container']" position="inside">
                <div class="app_settings_block" name="sales5_settings" string="Sales5 API">
                    <h2>Sales5 API Configuration</h2>
                    <div class="row mt16">
                        <div class="col-6">
                            <field name="sales5_client_id"/>
                            <field name="sales5_client_secret" password="True"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>

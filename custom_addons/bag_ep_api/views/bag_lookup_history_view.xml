<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List View (formerly tree) -->
    <record id="view_bag_lookup_history_tree" model="ir.ui.view">
        <field name="name">bag.lookup.history.list</field>
        <field name="model">bag.lookup.history</field>
        <field name="arch" type="xml">
            <list string="Bag Lookup History">
                <field name="name"/>
                <field name="date"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_bag_lookup_history_form" model="ir.ui.view">
        <field name="name">bag.lookup.history.form</field>
        <field name="model">bag.lookup.history</field>
        <field name="arch" type="xml">
            <form string="Bag Lookup History">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_bag_lookup_history" model="ir.actions.act_window">
        <field name="name">Bag Lookup History</field>
        <field name="res_model">bag.lookup.history</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Bag Lookup History record
            </p>
        </field>
    </record>

    <!-- Menu items -->
    <menuitem id="menu_bag_lookup_root" name="Bag API"/>
    <menuitem id="menu_bag_lookup_history"
              name="Bag Lookup History"
              parent="menu_bag_lookup_root"
              action="action_bag_lookup_history"/>
</odoo>

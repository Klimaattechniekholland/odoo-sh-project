<odoo>
  <data>
    <record id="view_partner_form_add_update_button" model="ir.ui.view">
      <field name="name">res.partner.form.add.update.button</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='name']" position="after">
          <div class="oe_button_box" name="button_box">
            <button name="action_ep_api_lookup"
                    type="object"
                    string="Update"
                    class="btn btn-primary"
                    icon="fa-refresh"/>
          </div>
        </xpath>
      </field>
    </record>
  </data>
</odoo>

<odoo>
    <data>
        <record id="view_partner_form_add_zip_and_house" model="ir.ui.view">
            <field name="name">res.partner.form.add.zip.house</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <!-- Add to the main address section (main contact) -->
                <xpath expr="//div[@class='oe_title mb24']" position="after">
                    <group>
                        <label for="zip" string="Zip + Number"/>
                        <div class="o_address_format" name="div_address_zip">
                            <field name="zip"
                                   placeholder="ZIP"
                                   class="o_address_zip"
                                   readonly="type == 'contact' and parent_id"/>
                            <field name="full_house_number"
                                   placeholder="Number"
                                   class="o_address_city"
                                   readonly="type == 'contact' and parent_id"/>
                            <field name="ep_lookup_status"
                                   placeholder="status"
                                   class="o_address_city"
                                   readonly="true"/>
                        </div>
                    </group>

                </xpath>

                <!-- Add to a popup form: before the street field -->
                <xpath expr="//field[@name='child_ids']/form//hr" position="after">
                    <group>
                        <label for="zip" string="Zip + Number" invisible="type == 'contact'"/>
                        <div invisible=" type == 'contact'">
                            <div class="o_address_format" name="div_address_zip">
                                <field name="zip"
                                       placeholder="ZIP"
                                       class="o_address_zip"/>
                                <field name="full_house_number"
                                       placeholder="Number"
                                       class="o_address_city"/>
                            </div>
                        </div>
                    </group>
                </xpath>


            </field>
        </record>
    </data>
</odoo>

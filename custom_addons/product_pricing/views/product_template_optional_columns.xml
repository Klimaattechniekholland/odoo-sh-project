<odoo>

    <!-- Product Template list: add optional columns -->
    <record id="product_template_tree_add_pricing_columns" model="ir.ui.view">
        <field name="name">product.template.tree.add.pricing.columns</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">

            <xpath expr="//list/field[@name='list_price']" position="after">
                <field name="margin" optional="hide" readonly="1"/>
                <field name="markup" optional="hide" readonly="1"/>
            </xpath>

            <xpath expr="//list/field[@name='standard_price']" position="after">
                <field name="supplier_sales_price" optional="hide" readonly="1"/>
                <field name="supplier_discount" optional="hide" readonly="1"/>
            </xpath>

        </field>
    </record>

</odoo>
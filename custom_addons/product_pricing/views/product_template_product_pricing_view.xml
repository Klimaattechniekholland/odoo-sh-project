<odoo>
    <data>
        <record id="view_product_template_inherit_pricing" model="ir.ui.view">
            <field name="name">product.template.form.inherit.pricing</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <group string="Pricing Details">
                        <field name="product_pricing_ids">
                            <list editable="bottom">
                                <field name="product_supplier_sales_price"/>
                                <field name="product_supplier_discount"/>
                                <field name="product_margin"/>
                                <field name="product_markup"/>
                            </list>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
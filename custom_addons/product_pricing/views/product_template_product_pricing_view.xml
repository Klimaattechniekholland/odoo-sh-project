<odoo>
    <data>
        <record id="view_product_template_inherit_pricing" model="ir.ui.view">
            <field name="name">product.template.pricing.fields</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@name='standard_price_uom']" position="after">
                    <field name="supplier_sales_price"/>
                    <field name="supplier_discount"/>
                </xpath>

                <xpath expr="//div[@name='list_price_uom']" position="after">
                    <field name="price_type" widget="radio" options="{'horizontal': True}"/>
                    <field name="margin" invisible="not is_price_type_margin"/>
                    <field name="markup" invisible="is_price_type_margin"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
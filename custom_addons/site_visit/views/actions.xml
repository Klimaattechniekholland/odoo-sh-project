<odoo>
    <data>

        <!-- Site Visit Actions -->
        <record id="action_site_visit" model="ir.actions.act_window">
            <field name="name">Site Visits</field>
            <field name="res_model">site.visit</field>
            <field name="view_mode">list,form</field>
        </record>


        <!-- Inspection Category Action -->
        <record id="action_site_inspection_category" model="ir.actions.act_window">
            <field name="name">Inspection Categories</field>
            <field name="res_model">site.visit.inspection.category</field>
            <field name="view_mode">list,form</field>
        </record>


        <!-- Inspection Component Action -->
        <record id="action_site_inspection_component" model="ir.actions.act_window">
            <field name="name">Inspection Component</field>
            <field name="res_model">site.visit.inspection.component</field>
            <field name="view_mode">list,form</field>
        </record>


        <!-- Inspection points Action -->
        <record id="action_site_inspection_point" model="ir.actions.act_window">
            <field name="name">Inspection Point</field>
            <field name="res_model">site.visit.inspection.point</field>
            <field name="view_mode">list,form</field>
        </record>


        <!-- Server Action to run the ACL refresh -->
        <record id="action_refresh_site_visit_acls" model="ir.actions.server">
            <field name="name">Refresh Site Visit ACLs</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="state">code</field>
            <field name="code">env['site_visit.acl.refresh'].refresh_acls()</field>
        </record>


    </data>
</odoo>

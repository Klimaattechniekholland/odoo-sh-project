<odoo>
    <data>
        <record id="view_form_site_visit_category" model="ir.ui.view">
            <field name="name">site.visit.category.form</field>
            <field name="model">site.visit.category</field>
            <field name="arch" type="xml">
                <form string="Inspection Category">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

         <record id="view_list_site_visit_category" model="ir.ui.view">
            <field name="name">site.visit.category.list</field>
            <field name="model">site.visit.category</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="description"/>
                </list>
            </field>
        </record>
    </data>
</odoo>

<odoo>
    <data>
        <record id="view_form_installation" model="ir.ui.view">
            <field name="name">installation.form</field>
            <field name="model">site.visit.installation</field>
            <field name="arch" type="xml">
                <form string="Installation">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="template_id"/>
                        </group>

                        <notebook>
                            <field name="user_category_ids">
                                <list string="Categories" editable="bottom">
                                    <field name="template_category_id"/>
                                </list>
                            </field>

                            <field name="user_category_ids">
                                <form string="Category">
                                    <group>
                                        <field name="template_category_id" readonly="1"/>
                                        <field name="user_component_ids">
                                            <list string="Components" editable="bottom">
                                                <field name="template_component_id"/>
                                            </list>
                                        </field>

                                        <field name="user_component_ids">
                                            <form string="Component">
                                                <group>
                                                    <field name="template_component_id" readonly="1"/>
                                                    <field name="user_point_ids">
                                                        <list string="Points" editable="bottom">
                                                            <field name="template_point_id"/>
                                                            <field name="value"/>
                                                        </list>
                                                    </field>
                                                </group>
                                            </form>
                                        </field>
                                    </group>
                                </form>
                            </field>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
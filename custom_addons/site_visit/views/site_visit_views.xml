<odoo>
    <data>
        <record id="view_form_site_visit" model="ir.ui.view">
            <field name="name">site.visit.form</field>
            <field name="model">site.visit</field>
            <field name="arch" type="xml">

                <form string="Site Visit">
                    <sheet>
                        <button name="action_send_report_email" type="object" string="Send Report by Email"
                                class="btn-primary" icon="fa-envelope"/>
                        <group string="Visit Overview">
                            <field name="name"/>
                            <field name="customer_id"/>
                            <field name="visit_date"/>
                        </group>

                        <!-- Category Toggles -->
                        <group string="Installation Categories">
                            <field name="has_heatpump"/>
                            <field name="has_cv"/>
                            <field name="has_battery"/>
                            <field name="has_airco"/>
                        </group>

                        <!-- Conditional Tabs -->
                        <notebook>

                            <page string="Heat Pump" invisible="has_heatpump == False">
                                <group>
                                    <!--                                    <field name="heatpump_model"/>-->
                                    <!--                                    <field name="heatpump_year"/>-->
                                </group>
                            </page>

                            <page string="CV" invisible="has_cv == False">
                                <group>
                                    <!--                                    <field name="cv_type"/>-->
                                </group>
                            </page>

                            <page string="Battery" invisible="has_battery == False">
                                <group>
                                    <field name="name"/>

                                    <!--                                    <field name="battery_capacity"/>-->
                                </group>
                            </page>

                            <page string="Airco" invisible="has_airco == False">
                                <group>
                                    <field name="name"/>

                                    <!--                                    <field name="airco_brand"/>-->
                                </group>
                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_form_site_visit_image" model="ir.ui.view">
            <field name="name">site.visit.image.form</field>
            <field name="model">site.visit.image</field>
            <field name="arch" type="xml">
                <form string="System Photo">
                    <sheet>

                        <!--                        <button name="action_send_report_email" type="object" string="Send Report by Email"-->
                        <!--                              class="btn-primary" icon="fa-envelope"/>-->

                        <notebook>
                            <page string="Main Info">
                                <group>
                                    <field name="visit_id"/>
                                    <field name="category_id"/>
                                    <field name="image" widget="image"/>
                                    <field name="note"/>
                                </group>
                            </page>
                            <page string="Inspection Points">
                                <field name="point_ids">
                                    <!--                                    <tree editable="bottom">-->
                                    <!--                                        <field name="template_id"/>-->
                                    <!--                                        <field name="photo" widget="image"/>-->
                                    <!--                                        <field name="note"/>-->
                                    <!--                                    </tree>-->
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
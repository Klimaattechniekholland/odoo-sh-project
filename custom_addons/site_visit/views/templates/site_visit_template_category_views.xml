<odoo>
    <data>

        <!-- ============================= -->
        <!-- TEMPLATE CATEGORY VIEWS -->
        <!-- ============================= -->

        <!-- KANBAN TEMPLATE CATEGORY       -->
        <record id="view_site_visit_template_category_kanban" model="ir.ui.view">
            <field name="name">site.visit.template.category.kanban</field>
            <field name="model">site.visit.template.category</field>
            <field name="arch" type="xml">
                <kanban default_group_by="template_id">
                    <field name="display_code" class="oe_code_auto_width"/>
                    <field name="name"/>
                    <field name="component_ids"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_card">
                                <strong><field name="name"/></strong><br/>
                                <t t-if="record.component_ids.raw_value">
                                    <span>Components: <t t-esc="record.component_ids.raw_value.length"/></span>
                                </t>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- LIST TEMPLATE CATEGORY -->
        <record id="view_site_visit_template_category_list" model="ir.ui.view">
            <field name="name">site.visit.template.category.list</field>
            <field name="model">site.visit.template.category</field>
            <field name="arch" type="xml">
                <list>
                    <field name="sequence" widget="handle"/>
                    <field name="display_code" class="oe_code_auto_width"/>
                    <field name="name"/>
                    <field name="template_id"/>
                </list>
            </field>
        </record>


        <!-- FORM TEMPLATE CATEGORY -->
        <record id="view_site_visit_template_category_form" model="ir.ui.view">
            <field name="name">site.visit.template.category.form</field>
            <field name="model">site.visit.template.category</field>
            <field name="arch" type="xml">
                <form string="Template Category">
                    <header>
                        <button name="open_copy_wizard" type="object" string="Copy Category" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="breadcrumb_html" readonly="1"/>
                        </group>
                        <group>
                            <field name="display_code" class="oe_code_auto_width"/>
                            <field name="name"/>
                        </group>

                        <notebook>
                            <page string="Components">
                                <field name="component_ids">
                                    <list>
                                        <field name="sequence" widget="handle"/>
                                        <field name="display_code" class="oe_code_auto_width"/>
                                        <field name="name"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


    </data>
</odoo>

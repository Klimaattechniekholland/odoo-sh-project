<odoo>
    <data>

        <!-- ============================= -->
        <!-- TEMPLATE COMPONENT VIEWS -->
        <!-- ============================= -->

        <!-- KANBAN TEMPLATE COMPONENT       -->
        <record id="view_site_visit_template_component_kanban" model="ir.ui.view">
            <field name="name">site.visit.template.component.kanban</field>
            <field name="model">site.visit.template.component</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="sequence" widget="handle"/>
                    <field name="display_code" class="oe_code_auto_width"/>
                    <field name="name"/>
                    <field name="point_ids"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_card">
                                <strong><field name="name"/></strong><br/>
                                <t t-if="record.point_ids.raw_value">
                                    <span>Points: <t t-esc="record.point_ids.raw_value.length"/></span>
                                </t>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- LIST TEMPLATE COMPONENT       -->
        <record id="view_site_visit_template_component_list" model="ir.ui.view">
            <field name="name">site.visit.template.component.list</field>
            <field name="model">site.visit.template.component</field>
            <field name="arch" type="xml">
                <list>
                    <field name="sequence" widget="handle"/>
                    <field name="display_code" class="oe_code_auto_width"/>
                    <field name="name"/>
                    <field name="category_id"/>
                </list>
            </field>
        </record>


        <!-- FORM TEMPLATE COMPONENT       -->
        <record id="view_site_visit_template_component_form" model="ir.ui.view">
            <field name="name">site.visit.template.component.form</field>
            <field name="model">site.visit.template.component</field>
            <field name="arch" type="xml">
                <form string="Template Component">
                    <header>
                        <button name="open_copy_wizard" type="object" string="Copy Component" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="breadcrumb_html" readonly="1"/>
                        </group>
                        <group>
                            <field name="display_code" class="oe_code_auto_width"/>
                            <field name="name"/>
                            <field name="category_id"/>
                        </group>

                        <notebook>
                            <page string="Points">
                                <field name="point_ids">
                                    <list>
                                        <field name="sequence" widget="handle"/>
                                        <field name="display_code" class="oe_code_auto_width"/>
                                        <field name="name"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>

<odoo>
    <data>

        <!-- KANBAN TEMPLATE -->
        <record id="view_site_visit_template_kanban" model="ir.ui.view">
            <field name="name">site.visit.template.kanban</field>
            <field name="model">site.visit.template</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="sequence" widget="handle"/>

                    <field name="name"/>
                    <field name="category_ids"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div class="o_kanban_card">
                                <div class="o_kanban_details">
                                    <strong><field name="name"/></strong><br/>
                                    <span>Sequence: <field name="sequence"/></span>
                                    <br/>
                                    <span t-if="record.category_ids.raw_value &amp;&amp; record.category_ids.raw_value.length">
                                        Categories: <t t-esc="record.category_ids.raw_value.length"/>
                                    </span>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- LIST TEMPLATE -->
        <record id="view_site_visit_template_list" model="ir.ui.view">
            <field name="name">site.visit.template.list</field>
            <field name="model">site.visit.template</field>
            <field name="arch" type="xml">
                <list>
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                </list>
            </field>
        </record>

        <!-- FORM TEMPLATE -->
        <record id="view_site_visit_template_form" model="ir.ui.view">
            <field name="name">site.visit.template.form</field>
            <field name="model">site.visit.template</field>
            <field name="arch" type="xml">
                <form string="Inspection Template">
                    <header>
                        <button name="open_copy_wizard" type="object" string="Copy Template" class="oe_highlight"/>
                        <button name="button_resequence_all" type="object" string="Reorder All" class="oe_highlight"/>
                    </header>

                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>

                        <notebook>
                            <page string="Categories">
                                <field name="category_ids" context="{'default_template_id': id}">
                                    <list editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="display_code" class="oe_code_auto_width"/>"/>
                                        <field name="name"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


    </data>
</odoo>

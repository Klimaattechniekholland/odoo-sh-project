<odoo>
    <data>

        <!-- ============================= -->
        <!-- TEMPLATE POINT VIEWS -->
        <!-- ============================= -->

        <!-- KANBAN TEMPLATE POINT       -->
        <record id="view_site_visit_template_point_kanban" model="ir.ui.view">
            <field name="name">site.visit.template.point.kanban</field>
            <field name="model">site.visit.template.point</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="sequence" widget="handle"/>
                    <field name="display_code" class="oe_code_auto_width"/>
                    <field name="name"/>
                    <field name="component_id"/>
                    <field name="input_ids"/>
                    <field name="input_count"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_card">
                                <strong>Name: <field name="name"/></strong><br/>
                                <field name="component_id"/><br/>
                                <span t-if="record.input_count.raw_value" class="o_tag o_tag_color_1">
                                    <i class="fa fa-list-ul"/> <t t-esc="record.input_count.raw_value"/> Inputs
                                </span>
                                <span t-if="!record.input_count.raw_value" class="o_tag o_tag_color_2">
                                    No Inputs
                                </span>
                            </div>
                        </t>
                    </templates>

                </kanban>
            </field>
        </record>

        <!-- LIST TEMPLATE POINT       -->
        <record id="view_site_visit_template_point_list" model="ir.ui.view">
            <field name="name">site.visit.template.point.list</field>
            <field name="model">site.visit.template.point</field>
            <field name="arch" type="xml">
                <list>
                    <field name="sequence" widget="handle"/>
                    <field name="display_code" class="oe_code_auto_width"/>
                    <field name="name"/>
                    <field name="component_id"/>
                    <field name="input_count"/>
                </list>
            </field>
        </record>

        <!-- FORM TEMPLATE POINT       -->
        <record id="view_site_visit_template_point_form" model="ir.ui.view">
            <field name="name">site.visit.template.point.form</field>
            <field name="model">site.visit.template.point</field>
            <field name="arch" type="xml">
                <form string="Template Point">
                    <header>
                        <button name="open_copy_wizard" type="object" string="Copy Point" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="breadcrumb_html" readonly="1"/>
                        </group>
                        <group>
                            <field name="display_code" class="oe_code_auto_width"/>
                            <field name="name"/>
                            <field name="component_id"/>
                        </group>

                        <notebook>
                            <page string="Inputs">
                                <field name="input_ids">
                                    <list editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="display_code" class="oe_code_auto_width"/>
                                        <field name="name"/>
                                        <field name="field_type"/>
                                        <field name="description"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>

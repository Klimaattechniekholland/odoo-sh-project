<odoo>
    <data>
        <record id="view_site_visit_template_transient_category_wizard_form" model="ir.ui.view">
            <field name="name">site.visit.template.transient.category.wizard.form</field>
            <field name="model">site.visit.template.transient.category</field>
            <field name="arch" type="xml">
                <form string="Copy Category">
                    <group>
                        <field name="category_id" readonly="1"/>
                        <field name="target_template_id"/>
                        <field name="include_components"/>
                    </group>
                    <footer>
                        <button name="action_copy_category" type="object" string="Copy" class="btn-primary"/>
                        <button string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
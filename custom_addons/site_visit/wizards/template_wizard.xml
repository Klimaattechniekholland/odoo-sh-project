<odoo>
    <data>
        <record id="view_site_visit_template_transient_wizard_form" model="ir.ui.view">
            <field name="name">site.visit.template.transient.wizard.form</field>
            <field name="model">site.visit.template.transient</field>
            <field name="arch" type="xml">
                <form string="Copy Template">
                    <group>
                        <field name="template_id" readonly="1"/>
                        <field name="include_structure"/>
                    </group>
                    <footer>
                        <button name="action_copy_template" type="object" string="Copy" class="btn-primary"/>
                        <button string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
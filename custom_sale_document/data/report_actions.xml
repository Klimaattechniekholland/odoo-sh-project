<?xml version="1.0"?>
<odoo>
  <record id="sale.action_report_saleorder" model="ir.actions.report">
    <field name="report_name">custom_sale_document.report_saleorder_document</field>
    <field name="report_file">custom_sale_document.report_saleorder_document</field>
  </record>

  <record id="action_report_invoice_custom" model="ir.actions.report">
    <field name="name">Invoice PDF</field>
    <field name="model">account.move</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">custom_sale_document.report_invoice_document</field>
    <field name="report_file">custom_sale_document.report_invoice_document</field>
    <field name="print_report_name">'Invoice_%s' % (object.name,)</field>
  </record>

  <record id="action_report_service_contract" model="ir.actions.report">
    <field name="name">Service Contract</field>
    <field name="model">custom_sale_document.service_contract_wizard</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">custom_sale_document.report_service_contract</field>
    <field name="report_file">custom_sale_document.report_service_contract</field>
    <field name="print_report_name">'ServiceContract_%s' % (object.contract_duration,)</field>
  </record>
</odoo>
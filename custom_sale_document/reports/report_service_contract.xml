<?xml version="1.0"?>
<odoo>
  <template id="report_service_contract">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="o">
        <t t-call="web.external_layout">
          <div class="page">
            <h2>Service Contract</h2>
            <p><strong>Duration:</strong> <t t-esc="o.contract_duration"/> months</p>
            <p><strong>Frequency:</strong> <t t-esc="dict(o._fields['frequency'].selection).get(o.frequency)"/></p>
            <p><strong>Monthly Price:</strong>
              <t t-field="o.price" t-options="{'widget':'monetary','display_currency':o.currency_id}"/>
            </p>
            <p>This contract covers maintenance services for the above duration at the specified frequency and price.</p>
          </div>
        </t>
      </t>
    </t>
  </template>
</odoo>
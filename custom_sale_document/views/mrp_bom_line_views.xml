<?xml version="1.0"?>
<odoo>
  <record id="view_mrp_bom_line_tree_custom" model="ir.ui.view">
    <field name="name">mrp.bom.line.tree.custom</field>
    <field name="model">mrp.bom.line</field>
    <field name="inherit_id" ref="mrp.mrp_bom_line_tree_view"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='is_standard_price']" position="after">
        <field name="show_in_quote"/>
        <field name="component_price"/>
      </xpath>
    </field>
  </record>
</odoo>
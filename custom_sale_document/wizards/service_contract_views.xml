<?xml version="1.0"?>
<odoo>
  <record id="view_service_contract_wizard_form" model="ir.ui.view">
    <field name="name">service.contract.wizard.form</field>
    <field name="model">custom_sale_document.service_contract_wizard</field>
    <field name="arch" type="xml">
      <form string="Service Contract">
        <sheet>
          <group>
            <field name="contract_duration"/>
            <field name="frequency"/>
            <field name="price"/>
            <field name="currency_id"/>
          </group>
        </sheet>
        <footer>
          <button string="Print Contract" type="object" name="action_print_contract" class="btn-primary"/>
          <button string="Cancel" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
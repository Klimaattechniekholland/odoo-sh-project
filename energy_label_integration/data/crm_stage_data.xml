<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">

        <!-- Define custom CRM stages (pipeline stages) -->
        <record id="crm_stage_nieuwe_lead" model="crm.stage">
            <field name="name">Nieuwe Lead</field>
            <field name="sequence">10</field>
            <field name="team_id" eval="False"/> <!-- Global stage available for all sales teams -->
            <field name="fold" eval="False"/>     <!-- Not folded (active stage) -->
        </record>
        <record id="crm_stage_intake" model="crm.stage">
            <field name="name">Intake</field>
            <field name="sequence">20</field>
            <field name="team_id" eval="False"/>
            <field name="fold" eval="False"/>
        </record>
        <record id="crm_stage_voorlopige_offerte" model="crm.stage">
            <field name="name">Voorlopige Offerte</field>
            <field name="sequence">30</field>
            <field name="team_id" eval="False"/>
            <field name="fold" eval="False"/>
        </record>
        <record id="crm_stage_schouw" model="crm.stage">
            <field name="name">Schouw</field>
            <field name="sequence">40</field>
            <field name="team_id" eval="False"/>
            <field name="fold" eval="False"/>
        </record>
        <record id="crm_stage_definitieve_offerte" model="crm.stage">
            <field name="name">Definitieve Offerte</field>
            <field name="sequence">50</field>
            <field name="team_id" eval="False"/>
            <field name="fold" eval="False"/>
        </record>
        <record id="crm_stage_opdracht_bevestigd" model="crm.stage">
            <field name="name">Opdracht Bevestigd</field>
            <field name="sequence">60</field>
            <field name="team_id" eval="False"/>
            <field name="fold" eval="False"/>
        </record>
        <record id="crm_stage_installatie_datum" model="crm.stage">
            <field name="name">Insta. Datum</field>
            <field name="sequence">70</field>
            <field name="team_id" eval="False"/>
            <field name="fold" eval="False"/>
        </record>
        <record id="crm_stage_installatie" model="crm.stage">
            <field name="name">Installatie</field>
            <field name="sequence">80</field>
            <field name="team_id" eval="False"/>
            <field name="fold" eval="False"/>
        </record>
        <record id="crm_stage_oplevering" model="crm.stage">
            <field name="name">Oplevering</field>
            <field name="sequence">90</field>
            <field name="team_id" eval="False"/>
            <field name="fold" eval="False"/>
        </record>
        <record id="crm_stage_facturatie" model="crm.stage">
            <field name="name">Facturatie</field>
            <field name="sequence">100</field>
            <field name="team_id" eval="False"/>
            <!-- Mark the final stage as folded (closed) in pipeline view -->
            <field name="fold" eval="True"/>
        </record>
    </data>

    <!-- Optional: Set the EP-Online API key as a system parameter (so it is pre-configured) -->
    <record id="ir_config_param_ep_online_key" model="ir.config_parameter" noupdate="1">
        <field name="key">crm_energy_label.ep_online_api_key</field>
        <field name="value">NEU5RTIyNUIyNkFDNkM5RDY2M0NFODAwMzlEMDAyMzU2MzIyQzEzNzhGNDEzRDA3OEJCNTdBQjQxOTQ2RDc1MkIyNTFCRjc3ODg2RTlFN0NFM0FFNUI5Mzc5M0YyQjk3</field>
    </record>
</odoo>

<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_crm_lead_form_technician" model="ir.ui.view">
        <field name="name">crm.lead.form.technician</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_open_technician_portal"
                        type="object"
                        string="Technician Portal"
                        class="btn btn-primary" />
            </xpath>
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Technician Report">
                    <group>
                        <field name="report_date"/>
                        <field name="report_fullname"/>
                        <field name="report_address"/>
                        <field name="component"/>
                        <field name="defect_type"/>
                        <field name="defect_code"/>
                        <field name="intensity"/>
                        <field name="score"/>
                        <field name="photo_ids" widget="many2many_binary"/>
                    </group>
                </page>
            </xpath>
            
        </field>
    </record>
</odoo>

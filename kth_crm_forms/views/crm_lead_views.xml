<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--
        Extend the CRM lead form to include intake fields.

        A new page called "Intake Details" is added to the existing CRM
        lead form notebook.  It exposes all of the custom fields added
        by this module so that internal users and technicians can view
        and edit intake information directly on the lead.
    -->
    <record id="view_crm_lead_form_kth_inherit" model="ir.ui.view">
        <field name="name">crm.lead.form.kth.intake</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Intake Details">
                    <group>
                        <field name="full_name"/>
                        <field name="email_from"/>
                        <field name="phone"/>
                        <field name="address"/>
                        <field name="zip_code"/>
                        <field name="house_number"/>
                        <separator string="Heat Pump"/>
                        <field name="type_system"/>
                        <field name="brand"/>
                        <field name="floor_surface"/>
                        <field name="type_heating"/>
                        <field name="gas_consumption"/>
                        <field name="energy_label"/>
                        <field name="year_built"/>
                        <field name="ventilation"/>
                        <field name="members"/>
                        <field name="average_usage"/>
                        <field name="extra_notes"/>
                        <separator string="Airco"/>
                        <field name="airco_model"/>
                        <field name="airco_capacity"/>
                        <separator string="Service"/>
                        <field name="service_contract_type"/>
                        <separator string="Callâ€‘Out"/>
                        <field name="callout_issue"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Proposition: FORM -->
    <record id="view_sale_order_proposition_form" model="ir.ui.view">
        <field name="name">sale.order.proposition.form</field>
        <field name="model">sale.order.proposition</field>
        <field name="arch" type="xml">
            <form string="Proposition" create="false" edit="true">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,cancel"/>
                    <button name="action_confirm_proposition" type="object" string="Confirm Proposition"
                            class="oe_highlight"
                            invisible="[('state','!=','draft')]"/>
                </header>

                <sheet>
                    <group>
                        <field name="sale_order_id" readonly="1"/>
                        <field name="name" required="[('state','=','draft')]"/>
                        <field name="state" readonly="1"/>
                        <field name="amount_total" widget="monetary"
                               options="{'currency_field': 'currency_id'}"
                               readonly="1"/>
                        <field name="currency_id" invisible="1"/>
                    </group>

                    <notebook>
                        <page string="Lines">
                            <!-- Remove the context with active_id; Odoo auto-links o2m lines -->
                            <field name="line_ids">
                                <list editable="bottom" string="Proposition Lines">
                                    <field name="product_id" required="1" readonly="[('parent.state','!=','draft')]"/>
                                    <field name="name" readonly="[('parent.state','!=','draft')]"/>
                                    <field name="product_uom_qty" readonly="[('parent.state','!=','draft')]"/>
                                    <field name="price_unit" readonly="[('parent.state','!=','draft')]"/>
                                    <field name="discount" readonly="[('parent.state','!=','draft')]"/>
                                    <field name="tax_id" widget="many2many_tags" readonly="[('parent.state','!=','draft')]"/>
                                    <field name="price_subtotal" readonly="1"/>
                                </list>
                            </field>
                        </page>

                        <page string="Notes">
                            <field name="note" invisible="[('state','!=','draft')]"/>
                        </page>
                    </notebook>

                    <footer>
                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Proposition: LIST -->
    <record id="view_sale_order_proposition_list" model="ir.ui.view">
        <field name="name">sale.order.proposition.list</field>
        <field name="model">sale.order.proposition</field>
        <field name="arch" type="xml">
            <list string="Propositions" default_order="sequence">
                <field name="sequence" invisible="1"/>
                <field name="name"/>
                <field name="amount_total" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="state"/>
                <field name="currency_id" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Proposition Line: LIST -->
    <record id="view_sale_order_proposition_line_list" model="ir.ui.view">
        <field name="name">sale.order.proposition.line.list</field>
        <field name="model">sale.order.proposition.line</field>
        <field name="arch" type="xml">
            <list string="Proposition Lines" editable="bottom">
                <field name="product_id" required="1"/>
                <field name="name"/>
                <field name="product_uom_qty"/>
                <field name="price_unit"/>
                <field name="discount"/>
                <field name="tax_id" widget="many2many_tags"/>
                <field name="price_subtotal" readonly="1"/>
            </list>
        </field>
    </record>
</odoo>

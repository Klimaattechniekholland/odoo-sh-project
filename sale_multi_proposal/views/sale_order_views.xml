<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- ===================== HEADER BUTTONS ===================== -->
    <record id="view_order_form_inherit_proposals_buttons" model="ir.ui.view">
        <field name="name">sale.order.form.proposals.buttons</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_create_proposal" type="object"
                        string="New Proposal" class="btn-secondary"/>
                <button name="action_open_accept_wizard" type="object"
                        string="Accept Proposal" class="oe_highlight"/>
                <button name="action_view_proposals" type="object"
                        string="Proposals" class="btn-secondary"/>
            </xpath>
        </field>
    </record>

    <!-- ===================== FIELDS SECTION ===================== -->
    <record id="view_order_form_inherit_proposals_fields" model="ir.ui.view">
        <field name="name">sale.order.form.proposals.fields</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//group[1]" position="inside">
                <group string="Proposal">
                    <field name="is_proposal_quotation"/>
                    <field name="parent_quotation_id"/>
                    <field name="proposal_state"/>
                    <field name="proposal_count" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- ===================== SMART BUTTON ===================== -->
    <record id="view_order_form_inherit_proposals_smart" model="ir.ui.view">
        <field name="name">sale.order.form.proposals.smartbutton</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" name="action_view_proposals" type="object">
                    <div class="o_stat_info">
                        <span class="o_stat_value"><field name="proposal_count"/></span>
                        <span class="o_stat_text">Proposals</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>


<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Accept Proposal Wizard (single-view file) -->
    <record id="view_proposal_accept_wizard_form" model="ir.ui.view">
        <field name="name">sale.proposal.accept.wizard.form</field>
        <field name="model">sale.proposal.accept.wizard</field>
        <field name="arch" type="xml">
            <form string="Accept Proposal">
                <group>
                    <field name="proposal_id" readonly="1"/>
                    <field name="convert_to_main"/>
                </group>
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
